<% provide(:title, 'Adicionando novo Usuário') %>
    <h1>Adicionando novo Usuário</h1>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
            <%= form_for(@usuario) do |f| %>
                <%= f.label :nome %>
                <%= f.text_field :nome %>
                <%= f.label :email %>
                <%= f.email_field :email %>
                <%= f.label :password %>
                <%= f.password_field :password %>
                <%= f.label :password_confirmation, "Confirmação" %>
                <%= f.password_field :password_confirmation %>
                <%= f.submit "Criando novo Usuário", class: "btn btn-primary" %>
            <% end %>
          </div>
      </div>
